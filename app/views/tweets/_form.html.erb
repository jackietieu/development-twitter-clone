<h2>New Tweet!</h2>
<form action="/tweets" class='tweet-compose' method="POST">
  <input
      type="hidden"
      name="authenticity_token"
      value="<%= form_authenticity_token %>">

  <label>
    Content
    <textarea name="tweet[content]"></textarea>
    <strong class='chars-left'></strong>
  </label>
  <br>

  <script type="text/template">
    <label>
      Mention
      <select name="tweet[mentioned_user_ids][]">
        <option></option>
        <% User.all.each do |user| %>
        <option value="<%= user.id %>"><%= user.username %></option>
        <% end %>
      </select>
    </label>
  </script>

  <a href="javascript:void(0)" class='add-mentioned-user'>
    Add Mention
  </a>
  <div class="mentioned-users">
    
  </div>

  <br>

  <input type="Submit" value="Post Tweet!">
</form>
